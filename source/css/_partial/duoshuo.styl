#ds-thread #ds-reset .ds-avatar img{
    width: 40px !important;
    height: 40px !important;
    border-radius: 50%;
    margin-right: 8px;
    -webkit-transition: all .3s ease-in-out;
    -moz-transition: all .3s    ease-in-out;
    transition: all .3s ease-in-out;

    &:hover{
        transform: rotate(360deg); 
        -ms-transform:rotate(360deg); 	
        -moz-transform:rotate(360deg); 
        -webkit-transform:rotate(360deg); 
        -o-transform:rotate(360deg);
    }
}

#ds-thread #ds-reset .ds-comment-body .ds-comment-footer .ds-time{
    margin: 0 8px;
}

#ds-thread #ds-reset .ds-replybox {
    .ds-textarea-wrapper{
        border: none;
        padding-left: 6px;
        padding-right: 10px;
    }

    .ds-post-options{
        border: none;
    }
}

#ds-thread #ds-reset form .ds-textarea-wrapper textarea[name="message"]{
    -webkit-transition: all 0.30s ease-in-out;
    -moz-transition: all 0.30s ease-in-out;
    -ms-transition: all 0.30s ease-in-out;
    -o-transition: all 0.30s ease-in-out;
    outline: none;
    padding: 3px 0 3px 6px;
    margin: 0px 1px 3px 0px;
    border: 1px solid #ddd;
    border-radius: 4px;
    height: 84px !important;

    &:focus{
        border-radius: 0;    
        box-shadow: 0 0 5px rgba(81, 203, 238, 1);
        margin: 3px 1px 3px 0px;
        border: 1px solid rgba(81, 203, 238, 1);
    }
}


#ds-thread #ds-reset div.ds-replybox{
    margin: 32px 0;
}

#ds-thread #ds-reset{
    .ds-replybox .ds-post-toolbar .ds-sync, .ds-toolbar, .ds-powered-by{
        display: none;
    }
    .ds-replybox .ds-post-toolbar .ds-gradient-bg{
        background: #fff;
        border: 1px dashed rgba(128,128,128,0.5);
        margin-left: 6px;
    }
    .ds-replybox .ds-toolbar-buttons{
        margin-left: 6px;
    }
}
